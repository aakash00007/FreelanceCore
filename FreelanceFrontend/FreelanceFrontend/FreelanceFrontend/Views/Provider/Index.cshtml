@model IEnumerable<FreelanceFrontend.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


    <p>
        <a class="btn btn-success" asp-action="AddService">Add Service</a>
    </p>
    <table class="table">
    @if (ViewData["Error"] != null)
    {
        <h1 class="text-center">@ViewData["Error"]</h1>
    }
    else
    {
        <thead>
            <tr>

                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Service Price
                </th>
                <th>
                    Image
                </th>
                <th>
                    Service Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
            
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" width="50" height="50" alt="Service Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceType.ServiceName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditService", new { id=item.ServiceId },new {@class="btn btn-primary"})
                        @Html.ActionLink("Details", "Details", new { id=item.ServiceId },new {@class="btn btn-info"})
                        @Html.ActionLink("Delete", "DeleteService", new { id=item.ServiceId }, new {@class="btn btn-danger", onclick="alert('Are you sure you want to delete this service by id - "+item.ServiceId+"')"})
                    </td>
                </tr>
            }
        </tbody>
        }
    </table>
