@model Service

@{
    ViewData["Title"] = "Details";
}
@if (ViewData["Error"] != null)
{
    <h1 class="text-center"> @ViewData["Error"]</h1>
}
else
{
    <h3 class="text-center my-3">Service Details</h3>

    <div class="container">
        <div class="row justify-content-center">

        
    <div class="card box-shadow col-md-4 mx-5 my-3 p-0" style="width: 20rem; border-top-left-radius:25px; border-top-right-radius:25px">
        <img src="@Model.ImageUrl" style="height:200px; width:auto;" class="card-img-top img-fluid" alt="Service Image">
        <div class="card-body">
            <h5 class="card-title">Provider: @Model.Title</h5>
                    <p class="card-text"><strong>Service:</strong> @Model.ServiceType.ServiceName</p>
            <p class="card-text"><strong>Description: </strong>@Model.Description</p>
            <p class="card-text"><strong>Price: @Model.Price/-</strong></p>

            <a class="btn btn-secondary" asp-action="Index">Back To List</a>
        </div>
    </div>
        </div>
    </div>



}